.slick-arrow
	z-index 999

.slider
	
	.title
		line-height 1
	
	&__content
		width 100%
		max-width 700px
		text-align center
		position relative
		margin 50px auto 20px auto
		
		.slide
			padding 0 50px
			outline none
		
		.link
			color #4386f3
			text-decoration underline
		
		.rew
			padding 10px 3px

.slick-arrow
	width 15px
	height auto
	position absolute
	top 50%
	margin-top -7.5px
	
	&:first-child
		left 15px
	
	&:last-child
		right 15px
		transform rotate(180deg)