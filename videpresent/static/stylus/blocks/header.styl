#callback, #callbacked
	position fixed
	z-index 1000
	left 50%
	top 50%
	transform translate(-50%, -50%)
	background-color rgba(acsentColor, .9)
	padding 30px
	border-radius 30px
	text-align center
	visibility hidden
	color #fff
	
	.close
		margin 0 0 0 15px
	
	&:target
		visibility visible
	
	input
		padding 5px 15px
		border none
		border-radius 13px
		margin 10px 3px
	
	a
		background-color #fff
		padding 5px 15px
		border-radius 16px
		line-height 32px
	
	h3
		margin-bottom 10px

.logo-img
	max-width 60px
	height auto
	margin 0 5px 0 0

.logo-txt
	max-width 73px
	height auto

.nav
	display flex
	justify-content space-between
	transition all .5s
	
	.header__contact
		display none
		margin 15px 0 0 0
	
	li
		margin 0 3px 0 0
		position relative
		
		&:last-child
			margin 0
		
		&:hover:after
			width 100%
		
		&:after
			content ''
			display block
			position absolute
			height 1px
			width 0%
			background-color #fff
			bottom -3px
			left 0
			transition all .2s
	
	&:target
		transform translateX(0%)
		opacity 1
		background-color rgba(acsentColor, .99)
		

.header
	background-color rgba(acsentColor, .6)
	padding 20px 0
	position absolute
	top 0
	left 0
	right 0
	z-index 999
	
	.button
		border-color #fff
		
		&:hover
			background-color rgba(0,0,0, .3)
	
	*
		color #fff
	
	&__nav
		width 100%
		max-width 480px
		margin 0 15px
		text-align center
	
	&__content
		display flex
		align-items center
		justify-content space-between
	
	&__logo
		font-size 10px
		white-space nowrap
		
		p
			margin 5px 0 0 0
		
.tel
	font-weight 700
	margin 0 15px 0 0
	white-space nowrap

.button
	display inline-block
	border 2px solid textColor
	padding 10px 15px
	border-radius 24.5px
	white-space nowrap
